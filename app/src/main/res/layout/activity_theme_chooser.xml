<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.suresh.themes.ThemeChooserActivity"
    android:background="@color/chrome_grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/space_small">
        <ImageView android:id="@+id/Default"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/theme_blue"
            android:clickable="true"
            android:onClick="Default"/>
        <ImageView android:id="@+id/theme1"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/theme_cyan"
            android:clickable="true"
            android:onClick="theme1"/>
        <ImageView android:id="@+id/theme2"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:src="@drawable/theme_yellow"
            android:clickable="true"
            android:onClick="theme2"/>
        <ImageView android:id="@+id/theme3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/theme_green"
            android:clickable="true"
            android:onClick="theme3"/>
        <ImageView android:id="@+id/theme4"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/theme_red"
            android:clickable="true"
            android:onClick="theme4"/>

    </LinearLayout>

</ScrollView>
